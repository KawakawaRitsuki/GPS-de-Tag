<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">

<!-- ボタンが押されている -->
<item android:state_pressed="true">
<layer-list>
	<item>
	<shape
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:shape="rectangle">
		<gradient
		android:angle="270"
		android:startColor="#4197ee"
		android:endColor="#79bbff"
		android:type="linear" />

		<corners
			android:radius="4dip" />
		<stroke
			android:width="1dip"
			android:color="#469df5"/>
    </shape>
	</item>
</layer-list>
</item>

<!-- ボタンが押されていない -->
<item android:state_pressed="false">
<layer-list>
	<item>
	<shape
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:shape="rectangle">
		<gradient
		android:angle="270"
		android:startColor="#79bbff"
		android:endColor="#4197ee"
		android:type="linear" />
		<corners
			android:radius="4dip" />
		<stroke
			android:width="1dip"
			android:color="#469df5"/>
    </shape>
	</item>
</layer-list>
</item>

</selector>